{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "esModuleInterop": true,
     "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2017"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/**/*",
    "jest.setup.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ]
}